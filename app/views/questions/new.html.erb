<h1>新規質問作成</h1>

<%= form_with model: @question, local: true do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title, required: true %>
  </div>

  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content, required: true %>
  </div>

  <div>
    <%= f.submit "質問を投稿", class: "button" %>
  </div>
<% end %>
