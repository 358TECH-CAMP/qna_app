<div class="container">
    <h1>新規質問投稿</h1>
    <%= form_with model: @question do |f| %>
        <%= f.text_field :title, placeholder: "タイトル", required: true %>
        <%= f.text_area :content, placeholder: "質問内容", required: true %>
        <%= f.select :public, [["公開", true], ["非公開", false]], prompt: "公開設定を選択", required: true %>
        <%= f.submit "投稿" %>
    <% end %>
    <%= link_to "質問一覧に戻る", questions_path %>
</div>